<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vnr.mahubankapp.controller.LoginController">
   <VBox layoutY="6.0" prefHeight="400.0" prefWidth="200.0" styleClass="login_logo_container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
      <FontAwesomeIconView glyphName="BANK" size="30" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="MaHu Bank" />
   </VBox>
   <VBox layoutX="309.0" layoutY="100.0" prefHeight="350.0" prefWidth="350.0" styleClass="login_form_container" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <Label prefHeight="17.0" prefWidth="180.0" text="Choose Your  Account Type:" />
      <ChoiceBox fx:id="acc_selector" prefWidth="150.0" styleClass="account_selector" />
      <Label fx:id="payee_addrress_lbl" text="Payee Adress:" />
      <TextField fx:id="payee_address_fld" styleClass="input_field" />
      <Label fx:id="password_lbl" text="Password:" />
      <TextField fx:id="password_fld" styleClass="input_field" />
      <Button fx:id="login_btn" mnemonicParsing="false" text="Login" />
      <Label fx:id="error_lbl" styleClass="error_label"/>
   </VBox>
</AnchorPane>
